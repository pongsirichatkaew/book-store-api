{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/app",
  "projects": {
    "app": {
      "type": "application",
      "root": "apps/app",
      "entryFile": "main",
      "sourceRoot": "apps/app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app/tsconfig.app.json"
      }
    },
    "books-service": {
      "type": "application",
      "root": "apps/books-service",
      "entryFile": "main",
      "sourceRoot": "apps/books-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/books-service/tsconfig.app.json"
      }
    },
    "books-iam": {
      "type": "application",
      "root": "apps/books-iam",
      "entryFile": "main",
      "sourceRoot": "apps/books-iam/src",
      "compilerOptions": {
        "tsConfigPath": "apps/books-iam/tsconfig.app.json"
      }
    }
  }
}